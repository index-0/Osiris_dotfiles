Config { font = "-misc-fixed-medium-r-normal-*-14-130-75-75-c-70-iso10646-1"
       , borderColor = "#114488"
       , border = TopB
       , bgColor = "#114488"
       , fgColor = "#e4e7ea"
       , alpha = 255
       , position = Static { xpos = 0 , ypos = 0, width = 1920, height = 18 }
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run MPD ["-t", "<artist> - <title> - <lapsed>/<length> <statei>","--", "-P", ">>", "-Z", "||", "-S", "><"] 5
                    , Run DiskU [("/", "<usedp> "), ("/boot", "<usedp> "), ("/mnt", "<usedp> "), ("/home/index/mount","<usedp> ")] 
                      ["-L", "20", "-n", "#73D216", "-H", "90", "-h", "#D9534F"] 300
                    , Run Volume "default" "Master" ["-t","<volume>% <status>","--","-C","#73D216","-c","#D9534F"] 10
                    , Run MultiCoreTemp ["-t","<avg>","-L", "60", "-H", "80", "-l", "#73D216", "-n", "#FCF8E3", "-h", "#D9534F"] 10
                    , Run Com "sh" ["-c", "awk '{ print $1, $2, $3 }' /proc/loadavg"] "loadavg" 10
                    , Run MultiCpu ["-t","<total> <ipat>","-w","3","-L","0","-H","75","--normal","#73D216","--high","#D9534F"] 10
                    , Run Memory ["-t","<usedratio>","-w","3","-L","0","-H","75","--normal","#73D216","--high","#D9534F"] 10
                    , Run Wireless "wlp11s0f3u1" ["-t","<quality>"] 60
                    , Run Network "wlp11s0f3u1" ["-t","<rx> <tx>","-w","4","-L","0","-H","60","--normal","#73D216","--high","#D9534F"] 10
                    , Run Uptime ["-t","<days>d <hours>h <minutes>m"] 600
                    , Run Date "%b %_d %H:%M" "date" 600
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%} <action=`mpc toggle` button=1>%mpd%</action> {%disku% | <action=`amixer -D pulse set Master 1+ toggle`>%default:Master%</action>| %wlp11s0f3u1wi% %wlp11s0f3u1% | %multicoretemp% %multicpu% - %memory% | %loadavg% | %uptime% | %date% "
       }

